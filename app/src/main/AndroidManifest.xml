<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fii.robolink"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:configChanges = "locale"
        android:allowBackup="true"
        android:icon="@mipmap/ic_robolink"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_robolink_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityLanguage"
            android:launchMode="singleTask"></activity>
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityProfile" />
        <activity android:name="com.fii.robolink.MainFunctions.ActivityDevice" >

        </activity>
        <activity android:name="com.fii.robolink.MainFunctions.ActivityCamera" />
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityHelp" />
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityCustomerService" />
        <activity android:name="com.fii.robolink.SupportFunctions.ActivitySetting" />
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityAbout" />
        <activity
            android:name="com.fii.robolink.SupportFunctions.ActivityLogin"
            android:launchMode="singleTask" />
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityRegister" />
        <activity
            android:name="com.fii.robolink.SupportFunctions.ActivityWelcome"
            android:launchMode="singleTask" />
        <activity android:name="com.fii.robolink.SupportFunctions.ActivitySplash"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fii.robolink.SupportFunctions.ActivityMain" />
    </application>

</manifest>