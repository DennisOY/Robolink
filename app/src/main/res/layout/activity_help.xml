<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityHelp">

    <com.example.robolink.CustomTitleBar
        android:id="@+id/titlebar_help"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:centerTextColor="#000"
        app:centerTitle="@string/help"
        app:centerTitleSize="18"
        app:leftDrawable="@drawable/ic_out_black"
        app:leftText="@string/me"
        app:leftTextColor="#000"
        app:leftTextSize="15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7C7C7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="#e2dddd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Fii是一家什么样的公司？"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/help_expand_1"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_expand" />
                        <ImageView
                            android:id="@+id/help_colapse_1"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/ic_colapse"
                            android:visibility="invisible"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/content_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Fii是全球领先的通信网络设备、云服务设备、精密工具及工业机器人专业设计平台制造服务商，为客户提供以工业互联网平台为核心的新形态电子设备产品智能制造。。。。。"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Fii主要从事什么工作？"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/help_expand_2"
