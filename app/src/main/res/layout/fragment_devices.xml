<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentDevices">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/devices_tablayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="#fff"
        app:tabTextColor="#666464"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabBackground="@drawable/selector_tab"></com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/devices_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"></androidx.viewpager.widget.ViewPager>
</LinearLayout>