<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityRegister">

    <com.example.robolink.CustomTitleBar
        android:id="@+id/titlebar_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:leftTextColor = "#2196f3"></com.example.robolink.CustomTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7C7C7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/register"
        android:textSize="18dp"
        android:textColor="#000"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请输入验证码"
            android:singleLine="true"/>

        <Button
            android:id="@+id/send_authentication_code"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="获取验证码"
            android:textSize="12dp"
            android:textColor="#fff"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_regi_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="密码（6-12位数字字母组合）"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/edit_regi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="昵称"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/button_shape"
        android:text="@string/register"
        android:textSize="18dp"
        android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>